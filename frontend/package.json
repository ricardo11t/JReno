{
  "name": "jreno",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "compile-electron": "tsc -p tsconfig.electron.json",
    "electron-dev": "npm run compile-electron && concurrently \"npm run dev\" \"wait-on tcp:5173 && electron .\"",
    "electron-build": "npm run build && npm run compile-electron && electron-builder"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.2.0",
    "@mui/material": "^7.2.0",
    "p-limit": "^6.2.0",
    "pdf-lib": "^1.17.1",
    "pdf-poppler": "^0.2.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "wait-on": "^8.0.4"
  },
  "main": "electron/main.js",
  "build": {
    "appId": "com.yourcompany.renoproc",
    "productName": "JRENO",
    "asar": false,
    "files": [
      "dist/**/*",
      {
        "from": "electron",
        "to": "electron",
        "filter": [
          "**/*"
        ]
      },
      "../src/**/*"
    ],
    "extraFiles": [
      {
        "from": "../resources/poppler",
        "to": "poppler",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "output": "release"
    }
  }
}
