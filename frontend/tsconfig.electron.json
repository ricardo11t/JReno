{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "electron", // Onde os arquivos JS transpilados do Electron irão
        "rootDir": "electron", // Onde os arquivos TS do Electron estão
        "noEmit": false, // Permite a emissão de arquivos JS
        "moduleResolution": "Node",
        "types": [
            "node"
        ]
    },
    "include": [
        "electron/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}